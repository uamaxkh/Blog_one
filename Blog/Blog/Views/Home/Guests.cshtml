@{

    @model IEnumerable<Blog.Models.Review>
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var review in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading text-uppercase">@review.AuthorName</div>
            <div class="panel-body">@review.Text</div>
            <div class="panel-footer">@review.Date.ToString("yyyy/MM/dd")</div>
        </div>
    }
    <div class="panel panel-info">
        <div class="panel-heading text-uppercase">Додати коментар</div>
        <div class="panel-body">
            <form  method="post" action="/Home/Guests" role="form">
                <div class="form-group ">
                    <label class="control-label" for="Name">Ім'я</label>
                    <input required class="form-control" name="Name" id="Name" type="text" />
                </div>
                <div class="form-group">
                    <label class="control-label" for="Comment">Коментар</label>
                    <input required class="form-control" name="Comment" id="Comment" type="text" />
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Додати комент</button>
            </form>
        </div>
    </div>
</div>
